@model WebDeportivo.Models.ViewModels.ResetPasswordViewModel
@{
    ViewData["Title"] = "Restablecer Contraseña";
}

<div class="row justify-content-center">
    <div class="col-md-6">
        <div class="card shadow-lg">
            <div class="card-body p-5">
                <h2 class="card-title text-center text-warning mb-4">@ViewData["Title"]</h2>
                <p>Ingresa tu nueva contraseña.</p>

                @if (ViewBag.MensajeError != null)
                {
                    <div class="alert alert-danger">@ViewBag.MensajeError</div>
                }

                <form asp-action="Restablecer" method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                    <input type="hidden" asp-for="Token" />

                    <div class="form-group mb-3">
                        <label asp-for="NuevaPassword" class="form-label"></label>
                        <input asp-for="NuevaPassword" type="password" class="form-control" />
                        <span asp-validation-for="NuevaPassword" class="text-danger"></span>
                    </div>

                    <div class="form-group mb-3">
                        <label asp-for="ConfirmarNuevaPassword" class="form-label"></label>
                        <input asp-for="ConfirmarNuevaPassword" type="password" class="form-control" />
                        <span asp-validation-for="ConfirmarNuevaPassword" class="text-danger"></span>
                    </div>

                    <div class="d-grid gap-2 mt-4">
                        <button type="submit" class="btn btn-primary btn-lg">Restablecer</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}