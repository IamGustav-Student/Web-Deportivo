@{
    ViewData["Title"] = "Editar Deporte";
}

<div class="row justify-content-center">
    <div class="col-md-8">
        <div class="card shadow-lg">
            <div class="card-body p-5">
                <h2 class="card-title text-center text-warning mb-4">@ViewData["Title"]</h2>

                <form asp-action="EditarDeporte" method="post">
                    <input type="hidden" name="DeporteId" value="1" /> <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                    <div class="form-group mb-3">
                        <label for="Nombre" class="form-label">Nombre del Deporte</label>
                        <input name="Nombre" class="form-control" value="Basket" />
                    </div>

                    <div class="form-group mb-3">
                        <label for="Descripcion" class="form-label">Descripción Corta</label>
                        <textarea name="Descripcion" class="form-control" rows="3">Gestiona equipos, jugadores y estadísticas del torneo.</textarea>
                    </div>

                    <div class="form-group mb-3">
                        <label for="UrlImagen" class="form-label">URL de la Imagen</label>
                        <input name="UrlImagen" class="form-control" value="https://url-de-basket.jpg" />
                    </div>

                    <div class="form-check mb-3">
                        <input class="form-check-input" type="checkbox" name="EstaActivo" value="true" checked>
                        <label class="form-check-label" for="EstaActivo">
                            ¿Activo?
                        </label>
                    </div>

                    <div class="d-grid gap-2 d-md-flex justify-content-md-end mt-4">
                        <a asp-action="Index" class="btn btn-secondary me-md-2">Cancelar</a>
                        <button type="submit" class="btn btn-primary">Guardar Cambios</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>