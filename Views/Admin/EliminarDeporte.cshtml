@{
    ViewData["Title"] = "¿Eliminar Deporte?";
}

<div class="row justify-content-center">
    <div class="col-md-8">
        <div class="card shadow-lg border-danger">
            <div class="card-body p-5">
                <h2 class="card-title text-center text-danger mb-4">@ViewData["Title"]</h2>
                <p class="text-warning h5">¿Estás seguro que deseas eliminar permanentemente el deporte?</p>

                <div class="alert alert-dark mt-4">
                    <strong>Deporte:</strong> Voley <br>
                    <strong>Descripción:</strong> Administra los próximos partidos y tablas de posiciones.
                </div>

                <form asp-action="EliminarDeporteConfirmado" method="post">
                    <input type="hidden" name="DeporteId" value="2" /> <div class="d-grid gap-2 d-md-flex justify-content-md-end mt-4">
                        <a asp-action="Index" class="btn btn-secondary me-md-2">Cancelar</a>
                        <button type="submit" class="btn btn-danger">Si, Eliminar</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>