@{
    ViewData["Title"] = "Gestión de Deportes";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h1 class="text-warning">@ViewData["Title"]</h1>
    <a asp-action="CrearDeporte" class="btn btn-primary">
        <i class="bi bi-plus-circle-fill"></i> Crear Nuevo Deporte
    </a>
</div>

<div class="card shadow-lg">
    <div class="card-body p-4">
        <table class="table table-dark table-striped table-hover">
            <thead>
                <tr>
                    <th scope="col">Deporte</th>
                    <th scope="col">Descripción Corta</th>
                    <th scope="col">¿Está Activo?</th>
                    <th scope="col" style="width: 200px;">Acciones</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td>Basket</td>
                    <td>Gestiona equipos, jugadores y estadísticas del torneo.</td>
                    <td><span class="badge bg-success">Si</span></td>
                    <td>
                        <a asp-action="EditarDeporte" asp-route-id="1" class="btn btn-sm btn-primary">Editar</a>
                        <a asp-action="EliminarDeporte" asp-route-id="1" class="btn btn-sm btn-danger">Eliminar</a>
                    </td>
                </tr>
                <tr>
                    <td>Voley</td>
                    <td>Administra los próximos partidos y tablas de posiciones.</td>
                    <td><span class="badge bg-success">Si</span></td>
                    <td>
                        <a asp-action="EditarDeporte" asp-route-id="2" class="btn btn-sm btn-primary">Editar</a>
                        <a asp-action="EliminarDeporte" asp-route-id="2" class="btn btn-sm btn-danger">Eliminar</a>
                    </td>
                </tr>
                <tr>
                    <td>Natación</td>
                    <td>Revisa los tiempos, eventos y perfiles de nadadores.</td>
                    <td><span class="badge bg-secondary">No</span></td>
                    <td>
                        <a asp-action="EditarDeporte" asp-route-id="3" class="btn btn-sm btn-primary">Editar</a>
                        <a asp-action="EliminarDeporte" asp-route-id="3" class="btn btn-sm btn-danger">Eliminar</a>
                    </td>
                </tr>
            </tbody>
        </table>
    </div>
</div>